#!/bin/sh
iface=$1

wpa_conf=/app/wpa_supplicant_$iface.conf
pid=/var/run/wpa_supplicant_$iface.pid

start() {
    if [ ! -f $wpa_conf ]; then
	cp /etc/wpa_supplicant.conf $wpa_conf
    fi	
    
    wpa_supplicant -Dnl80211 -i$iface -c$wpa_conf -P $pid -B
}
stop() {
    kill $pid
}
restart() {
        stop
        start
}

case "$2" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart|reload)
        restart
        ;;
  *)
        echo "Usage: $0 interface {start|stop|restart}"
        exit 1
esac

exit $?
